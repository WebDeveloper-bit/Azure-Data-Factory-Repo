{
	"name": "dataflow For Join Trasformation",
	"properties": {
		"folder": {
			"name": "Pratice Dataflow_9"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DatasetInProductTable",
						"type": "DatasetReference"
					},
					"name": "SourceForProduct"
				},
				{
					"dataset": {
						"referenceName": "DatasetInProductCategory",
						"type": "DatasetReference"
					},
					"name": "SourceForProductCategory"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "InnerJoinTwoTablesBaseOnProductCategoryID"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ProductID as integer,",
				"          Name as string,",
				"          ProductNumber as string,",
				"          Color as string,",
				"          StandardCost as decimal(19,4),",
				"          ListPrice as decimal(19,4),",
				"          Size as string,",
				"          Weight as decimal(8,2),",
				"          ProductCategoryID as integer,",
				"          ProductModelID as integer,",
				"          SellStartDate as timestamp,",
				"          SellEndDate as timestamp,",
				"          DiscontinuedDate as timestamp,",
				"          ThumbNailPhoto as binary,",
				"          ThumbnailPhotoFileName as string,",
				"          rowguid as string,",
				"          ModifiedDate as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SourceForProduct",
				"source(output(",
				"          ProductCategoryID as integer,",
				"          ParentProductCategoryID as integer,",
				"          Name as string,",
				"          rowguid as string,",
				"          ModifiedDate as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SourceForProductCategory",
				"SourceForProduct, SourceForProductCategory join(source for product@ProductCategoryID == source for product category@ProductCategoryID,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> InnerJoinTwoTablesBaseOnProductCategoryID"
			]
		}
	}
}